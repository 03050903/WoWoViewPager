<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nightonke.wowoviewpagerexample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/wowo_translation_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wowo_translation_animation"
            />

        <Button
            android:id="@+id/wowo_scale_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wowo_scale_animation"
            />

        <Button
            android:id="@+id/wowo_alpha_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wowo_alpha_animation"
            />

    </LinearLayout>

</ScrollView>
